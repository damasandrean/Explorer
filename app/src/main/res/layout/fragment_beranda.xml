<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".fragments.BerandaFragment">

    <!-- TODO: Update blank fragment layout -->

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:autoStart="true"
        android:flipInterval="3000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/paralayang" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/png" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/warungw" />

    </ViewFlipper>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewFlipper"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/hotel"
        android:layout_width="144dp"
        android:layout_height="164dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="22dp"
        android:background="@color/bg_screen2"
        android:text="HOTEL"
        app:layout_constraintEnd_toStartOf="@+id/wisata2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewFlipper" />

    <Button
        android:id="@+id/wisata2"
        android:layout_width="154dp"
        android:layout_height="158dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="36dp"
        android:background="@color/bg_screen2"
        android:text="WISATA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hotel"
        app:layout_constraintTop_toBottomOf="@+id/viewFlipper" />

    <Button
        android:id="@+id/kuliner3"
        android:layout_width="156dp"
        android:layout_height="174dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="36dp"
        android:background="@color/bg_screen2"
        android:text="KULINER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotel" />

    <Button
        android:id="@+id/belanja4"
        android:layout_width="152dp"
        android:layout_height="184dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="36dp"
        android:background="@color/bg_screen2"
        android:text="BELANJA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toEndOf="@+id/kuliner3"
        app:layout_constraintTop_toBottomOf="@+id/wisata2" />


</androidx.constraintlayout.widget.ConstraintLayout>
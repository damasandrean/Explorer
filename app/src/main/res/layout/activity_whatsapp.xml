<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WhatsappActivity">

    <EditText
        android:id="@+id/etNomorHp"
        android:layout_width="359dp"
        android:layout_height="59dp"
        android:layout_marginTop="44dp"
        android:hint="@string/title_masukan_nomor_hp"
        android:inputType="number"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnOpenWhatsapp"
        android:layout_width="359dp"
        android:layout_height="59dp"
        android:layout_marginTop="44dp"
        android:background="#25D366"
        android:text="@string/title_buka_w"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNomorHp" />

</androidx.constraintlayout.widget.ConstraintLayout>